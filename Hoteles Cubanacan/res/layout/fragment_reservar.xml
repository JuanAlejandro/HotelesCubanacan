<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/big_padding"
            android:background="@color/secondary_color_blue">
        <!-- destino & hoteles -->
        <android.support.v7.widget.CardView
                android:id="@+id/cvDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/big_margin"
                android:layout_marginRight="@dimen/big_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin">
            <RelativeLayout
                    android:id="@+id/rlcvDestino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                <EditText
                        android:id="@+id/etDestino"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/destinos_title"
                        android:textSize="@dimen/regular_text_size"
                        android:textColorHint="@color/hint_text"
                        android:textColor="@android:color/black"
                        android:layout_centerHorizontal="true"
                        android:ems="10"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/cvHotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvDestino"
                android:layout_marginLeft="@dimen/big_margin"
                android:layout_marginRight="@dimen/big_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin">
            <RelativeLayout
                    android:id="@+id/rlcvHotel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                <AutoCompleteTextView
                        android:id="@+id/actvHoteles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hoteles_title"
                        android:textSize="@dimen/regular_text_size"
                        android:textColorHint="@color/hint_text"
                        android:textColor="@android:color/black"
                        android:layout_centerHorizontal="true"
                        android:ems="10"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
                android:id="@+id/llFechas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvHotel"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:weightSum="2">
            <!-- in -->
            <android.support.v7.widget.CardView
                    android:id="@+id/cvIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="3dp"
                    android:clickable="true">
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/tvEntradaTitulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="@dimen/regular_text_size"
                            android:text="@string/in"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@android:color/black"/>
                    <!-- in -->
                    <RelativeLayout
                            android:id="@+id/llIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvEntradaTitulo">
                        <TextView
                                android:id="@+id/tvInDia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textSize="@dimen/regular_text_size"
                                android:textColor="@color/cubanacan_light_red"
                                android:text="@string/lorem_dia"
                                android:layout_margin="@dimen/big_margin"/>
                        <TextView
                                android:id="@+id/tvInDiaMes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="42sp"
                                android:textColor="@color/cubanacan_light_red"
                                android:text="@string/lorem_dia_mes"
                                android:textStyle="bold"
                                android:layout_toRightOf="@id/tvInDia"
                                android:layout_toEndOf="@id/tvInDia"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"/>
                        <TextView
                                android:id="@+id/tvInAnno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/regular_text_size"
                                android:textColor="@color/cubanacan_light_red"
                                android:text="@string/lorem_anno"
                                android:layout_toRightOf="@id/tvInDiaMes"
                                android:layout_toEndOf="@id/tvInDiaMes"
                                android:layout_alignBaseline="@id/tvInDiaMes"/>
                        <TextView
                                android:id="@+id/tvInMes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/regular_text_size"
                                android:textColor="@color/cubanacan_light_red"
                                android:text="@string/lorem_mes"
                                android:layout_toRightOf="@id/tvInDiaMes"
                                android:layout_toEndOf="@id/tvInDiaMes"
                                android:layout_above="@id/tvInAnno"/>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- out-->
            <android.support.v7.widget.CardView
                    android:id="@+id/cvOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="3dp"
                    android:clickable="true">
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/tvSalidaTitulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/regular_text_size"
                            android:text="@string/out"
                            android:layout_marginLeft="@dimen/big_margin"
                            android:layout_marginTop="@dimen/big_margin"
                            android:textColor="@android:color/black"/>
                    <!-- in -->
                    <RelativeLayout
                            android:id="@+id/llOut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvSalidaTitulo">
                        <TextView
                                android:id="@+id/tvOutDia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textSize="@dimen/regular_text_size"
                                android:textColor="@color/cubanacan_light_red"
                                android:text="@string/lorem_dia"
                                android:layout_margin="10dp"/>
                        <TextView
                                android:id="@+id/tvOutDiaMes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="42sp"
                                android:textColor="@color/cubanacan_light_red"
                                android:text="@string/lorem_dia_mes"
                                android:textStyle="bold"
                                android:layout_toRightOf="@id/tvOutDia"
                                android:layout_toEndOf="@id/tvOutDia"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"/>
                        <TextView
                                android:id="@+id/tvOutAnno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/regular_text_size"
                                android:textColor="@color/cubanacan_light_red"
                                android:text="@string/lorem_anno"
                                android:layout_toRightOf="@id/tvOutDiaMes"
                                android:layout_toEndOf="@id/tvOutDiaMes"
                                android:layout_alignBaseline="@id/tvOutDiaMes"/>
                        <TextView
                                android:id="@+id/tvOutMes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/regular_text_size"
                                android:textColor="@color/cubanacan_light_red"
                                android:text="@string/lorem_mes"
                                android:layout_toRightOf="@id/tvOutDiaMes"
                                android:layout_toEndOf="@id/tvOutDiaMes"
                                android:layout_above="@id/tvOutAnno"/>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <!-- rooms -->
        <android.support.v7.widget.CardView
                android:id="@+id/cvRooms"
                android:layout_below="@id/llFechas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/big_margin"
                android:layout_marginRight="@dimen/big_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin">
            <RelativeLayout
                    android:id="@+id/rlCardViewDBInfo"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_margin">
                <!-- rooms -->
                <RelativeLayout
                        android:id="@+id/llHabitaciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                    <TextView
                            android:id="@+id/tvTitular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/regular_text_size"
                            android:text="@string/rooms"
                            android:textColor="@android:color/black"/>
                    <LinearLayout
                            android:id="@+id/llSelCantHab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:weightSum="3">
                        <android.support.v7.widget.AppCompatButton
                                android:id="@+id/btnLessHab"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:text="@string/less"
                                android:textColor="@color/cubanacan_light_red"
                                android:background="@android:color/transparent"
                                android:padding="10dp"
                                android:gravity="center"
                                android:layout_weight="1"/>
                        <TextView
                                android:id="@+id/tvCantHab"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lorem_number"
                                android:textSize="@dimen/regular_text_size"
                                android:textColor="@color/cubanacan_light_red"
                                android:padding="10dp"
                                android:gravity="center"
                                android:layout_weight="1"/>
                        <android.support.v7.widget.AppCompatButton
                                android:id="@+id/btnPlusHab"
                                android:layout_width="@dimen/btn_width_size"
                                android:layout_height="wrap_content"
                                android:text="@string/plus"
                                android:textColor="@color/cubanacan_light_red"
                                android:background="@android:color/transparent"
                                android:padding="@dimen/big_padding"
                                android:gravity="center"
                                android:layout_weight="1"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!-- rooms -->
        <!-- default -->
        <android.support.v7.widget.CardView
                android:id="@+id/cvPeople"
                android:layout_below="@id/cvRooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/big_margin"
                android:layout_marginRight="@dimen/big_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/regular_margin"
                            android:textSize="@dimen/regular_text_size"
                            android:text="@string/room_lorem"
                            android:textColor="@android:color/black"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/regular_margin"
                            android:layout_marginBottom="@dimen/regular_margin"
                            android:textSize="15sp"
                            android:text="@string/lorem_one"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <View
                        android:background="@color/third_color_blue"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/regular_margin"
                            android:textSize="@dimen/regular_text_size"
                            android:text="@string/adults"
                            android:textColor="@android:color/black"/>
                    <TextView
                            android:id="@+id/tvCantAd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/regular_margin"
                            android:layout_marginBottom="@dimen/regular_margin"
                            android:textSize="@dimen/regular_text_size"
                            android:text="@string/lorem_one"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <View
                        android:background="@color/third_color_blue"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/regular_margin"
                            android:textSize="@dimen/regular_text_size"
                            android:text="@string/ninnos"
                            android:textColor="@android:color/black"/>
                    <TextView
                            android:id="@+id/tvCantNin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/regular_margin"
                            android:layout_marginBottom="@dimen/regular_margin"
                            android:textSize="15sp"
                            android:text="@string/lorem_one"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- two -->
        <android.support.v7.widget.CardView
                android:id="@+id/cvPeopleTwo"
                android:layout_below="@id/cvPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textSize="15sp"
                            android:text="@string/room_lorem"
                            android:textColor="@android:color/black"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="2"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <View
                        android:background="@color/third_color_blue"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textSize="15sp"
                            android:text="@string/adults"
                            android:textColor="@android:color/black"/>
                    <TextView
                            android:id="@+id/tvCantAdTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/lorem_one"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <View
                        android:background="@color/third_color_blue"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textSize="15sp"
                            android:text="@string/ninnos"
                            android:textColor="@android:color/black"/>
                    <TextView
                            android:id="@+id/tvCantNinTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/lorem_one"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- three -->
        <android.support.v7.widget.CardView
                android:id="@+id/cvPeopleThree"
                android:layout_below="@id/cvPeopleTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textSize="15sp"
                            android:text="@string/room_lorem"
                            android:textColor="@android:color/black"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="3"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <View
                        android:background="@color/third_color_blue"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textSize="15sp"
                            android:text="@string/adults"
                            android:textColor="@android:color/black"/>
                    <TextView
                            android:id="@+id/tvCantAdThree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/lorem_one"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <View
                        android:background="@color/third_color_blue"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textSize="15sp"
                            android:text="@string/ninnos"
                            android:textColor="@android:color/black"/>
                    <TextView
                            android:id="@+id/tvCantNinThree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/lorem_one"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- four -->
        <android.support.v7.widget.CardView
                android:id="@+id/cvPeopleFour"
                android:layout_below="@id/cvPeopleThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textSize="15sp"
                            android:text="@string/room_lorem"
                            android:textColor="@android:color/black"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="4"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <View
                        android:background="@color/third_color_blue"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textSize="15sp"
                            android:text="@string/adults"
                            android:textColor="@android:color/black"/>
                    <TextView
                            android:id="@+id/tvCantAdFour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="@string/lorem_one"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <View
                        android:background="@color/third_color_blue"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="1">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textSize="15sp"
                            android:text="@string/ninnos"
                            android:textColor="@android:color/black"/>
                    <TextView
                            android:id="@+id/tvCantNinFour"
